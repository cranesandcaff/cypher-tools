{
    "source":
    {
        "include": ["./src/"],
        "includePattern": ".+\\.js(doc)?$"
    },

    "plugins": [
        "plugins/markdown",
        "plugins/commentsOnly"
    ],

    "opts":
    {

        "destination": "./docs/",
        "recurse": true,
        "template": "templates/default",
        "access": "all",
        "private": true,
        "readme": "./README.md",
        "tutorials": "./tutorials/"
    },

    "templates": {
        "cleverLinks": false,
        "monospaceLinks": false
    },

    "tags":
    {
        "allowUnknownTags": true,
        "dictionaries": ["jsdoc", "closure"]
    }
}
